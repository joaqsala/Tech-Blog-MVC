
<form class="w-75">
  <div class="mb-3">
    <label for="blog-title" class="form-label">Title</label>
    <input type="text" class="form-control" id="blog-title-input" value="{{blog.blog_title}}">
  </div>
 <div class="mb-3">
  <label for="blog-content" class="form-label">Blog Away</label>
  <textarea class="form-control" id="blog-content-input" rows="5">{{blog.blog_content}}</textarea>
</div>
  <button type="submit" class="btn btn-primary" id="blog-update-button" data-blog-id="{{blog.id}}">Update</button>
  <button type="button" class="btn btn-secondary" id="blog-delete-button" data-blog-id="{{blog.id}}">Delete</button>
</form>

