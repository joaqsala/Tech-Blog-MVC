<div class="pt-4 pb-4">
        <div class="card w-75 mx-auto">
          <div class="card-header d-flex justify-content-between align-items-center">
            <a href="#">{{blogs.blog_title}}</a>
            <span class="text-end">{{blogs.user.username}} on {{format_date blogs.created_on}}</span>
          </div>
          <div class="card-body">
            <p class="card-text">{{blogs.blog_content}}</p>
          </div>
        </div>
      </div>
{{!-- this can all become a partial later on --}}
<section>
  <div class="container my-5 text-dark">
    <div class="row d-flex justify-content-center">
      <div class="col-md-11 col-lg-9 col-xl-7">
    <h4>Comments</h4>
         {{#each blogs.comments}}
        <div class="d-flex flex-start mb-4">
          <div class="card w-100">
            <div class="card-body p-4">
              <div class="">
                <h5>{{this.user.username}}</h5>
                <p class="small">{{format_date this.commented_on}}</p>
                <p>
                  {{this.comment_content}}
                </p>

                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                  </div>
                  <a href="#!" class="link-muted"><i class="fas fa-reply me-1"></i> Reply</a>
                </div>
              </div>
            </div>
          </div>
        </div>
 {{/each}}

      </div>
    </div>
<div class="p-3 d-flex justify-content-center">
      <button type="button" id="comment-button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal" data-blog-id="{{blogs.id}}">Add a comment</button>
  </div>
</section>


<!-- Comment Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentModalLabel">Add Comment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="commentForm">
          <div class="mb-3">
            <label for="commentInput" class="form-label">Your Comment</label>
            <textarea class="form-control" id="commentInput" rows="3"></textarea>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closer" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
        </form>
    </div>
  </div>
</div>


<script src="/js/utilities/addComment.js" defer></script>

