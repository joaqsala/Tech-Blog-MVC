<div class="pt-4 pb-4">
  <div class="card w-75 mx-auto">
    <div class="card-header d-flex justify-content-between align-items-center">
      <a href="#">{{blogs.blog_title}}</a>
      <span class="text-end">{{blogs.user.username}} on {{format_date blogs.created_on}}</span>
    </div>
    <div class="card-body">
      <p class="card-text">{{blogs.blog_content}}</p>
    </div>
  </div>
</div>
<section>
  <div class="container my-5 text-dark">
    <div class="row d-flex justify-content-center">
      <div class="col-md-11 col-lg-9 col-xl-7">
    <h4>Comments</h4>
      {{#each blogs.comments}}
      {{> blog-comments-details}}
      {{/each}}
      </div>
    </div>
  <div class="p-3 d-flex justify-content-center">
    <button type="button" id="comment-button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal" data-blog-id="{{blogs.id}}">Add a comment</button>
  </div>
</section>

{{> comment-modal}}


<script src="/js/utilities/addComment.js" defer></script>

